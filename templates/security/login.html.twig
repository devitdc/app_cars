{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block myTitle %}
    <div class="container g-0 auth-title-container">
        <div class="mx-auto d-block">
            <span class="clearfix">{{ title }}</span>
            <h6 >Pas de compte ? <a href="{{ path('security_signup') }}">Inscrivez-vous</a></h6>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-4 auth-form-container">
        {%  if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group mb-3 fs-5">
                <label for="user_email" >Email</label>
                <input type="text" name="_username" id="user_email" required class="form-control rounded-pill" placeholder="Ex : thierry.dupont@gmail.com">
            </div>
            <div class="form-group mb-4 fs-5">
                <label for="user_password">Mot de passe</label>
                <input type="password" name="_password" id="user_password" required class="form-control rounded-pill">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="text-center d-flex w-100">
                <input type="submit" value="Se connecter" class="btn btn-success rounded-pill px-5 fs-5 w-100">
            </div>
        </form>
    </div>
{% endblock %}
