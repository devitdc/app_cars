{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block myTitle %}{{ title }}{% endblock %}

{% block body %}
    <div class="container register-container mt-4">
        {{ form_start(formUser, { 'attr' : { 'novalidate' : 'novalidate' }}) }}
            {{ form_row(formUser.email, { 'attr' : { 'class' : 'mb-3 rounded-pill'}}) }}
            {{ form_row(formUser.password, { 'attr' : { 'class' : 'mb-3 rounded-pill'}}) }}
            {{ form_row(formUser.passwordMatch, { 'attr' : { 'class' : 'mb-3 rounded-pill'}}) }}
        <div class="text-center">
            <button type="submit" class="btn btn-success rounded-pill mt-2 px-5 fs-5 w-100">Créer mon compte</button>
            <p class="mt-3"><a href="{{ path('security_login') }}">J'ai déjà un compte !</a></p>
        </div>
        {{ form_end(formUser) }}
    </div>
{% endblock %}
