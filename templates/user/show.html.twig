{% block body %}
    <div class="container border rounded shadow" >
        <div class="row px-3 mt-2 text-center">
            <div class="mt-3 mb-1">
                <h4 class="fw-bold">Informations personnelles</h4>
            </div>
        </div>
        <div class="row px-3">
            <div class="col-5 col-sm-6 col-md-6 col-lg-3 mb-2">
                <label class="mt-1 ms-3 required" for="user_edit_status">Status</label>
                <input type="text" id="user_edit_status" name="user_edit[status]" class="rounded form-control" disabled value="{{ user.status }}" />
            </div>
        </div>
        <div class="row px-3">
            <div class="col-8 col-sm-8 col-md-8 col-lg-5 mb-2">
                <label class="mt-1 ms-3 required" for="user_edit_role">Role</label>
                <input type="text" id="user_edit_role" name="user_edit[role]" class="rounded form-control" disabled value="{{ user.role.name }}" />
            </div>
        </div>
        <div class="row px-3">
            <div class="col-10 col-sm-10 col-md-10 col-lg-6 mb-2">
                <label class="mt-1 ms-3 required" for="user_edit_email">Email</label>
                <input type="email" id="user_edit_email" name="user_edit[email]" class="rounded form-control" disabled value="{{ user.email}}" />
            </div>
        </div>
        <div class="row px-3 mt-3">
            <div class="col-5 col-sm-5 col-md-5 mb-2">
                <label class="mt-1 ms-3" for="user_edit_title">Title</label>
                <input type="text" id="user_edit_title" name="user_edit[title]" class="rounded form-control" disabled value="{{ user.title }}"/>
            </div>
        </div>
        <div class="row px-3">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mb-2">
                <label class="mt-1 ms-3" for="user_edit_firstname">Firstname</label>
                <input type="text" id="user_edit_firstname" name="user_edit[firstname]" class="rounded form-control" disabled value="{{ user.firstname }}" />
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mb-2">
                <label class="mt-1 ms-3" for="user_edit_lastname">Lastname</label>
                <input type="text" id="user_edit_lastname" name="user_edit[lastname]" class="rounded form-control" disabled value="{{ user.lastname }}" />
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                <label class="mt-1 ms-3" for="user_edit_address">Address</label>
                <input type="text" id="user_edit_address" name="user_edit[address]" class="rounded form-control" disabled value="{{ user.address }}"/>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-2 mb-2">
                <label class="mt-1 ms-3" for="user_edit_postalCode">Postal code</label>
                <input type="number" id="user_edit_postalCode" name="user_edit[postalCode]" class="rounded form-control" disabled value="{{ user.postalCode }}"/>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-4 mb-2">
                <label class="mt-1 ms-3" for="user_edit_city">City</label>
                <input type="text" id="user_edit_city" name="user_edit[city]" class="rounded form-control" disabled value="{{ user.city }}"/>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4 mb-4">
                <label class="mt-1 ms-3" for="user_edit_phone">Phone</label>
                <input type="text" id="user_edit_phone" name="user_edit[phone]" class="rounded form-control" disabled value="+33652455236"/>
            </div>
        </div>
    </div>
{%  endblock %}