{%  extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container" style="width: 90% !important;">
        <a href="{{ path('vehicle_list') }}">
            <button class="btn btn-primary rounded-1 mt-2 mb-4">
                Retour à la liste des voitures
            </button>
        </a>
    </div>
    <div class="container border rounded shadow" style="width: 90% !important;">
        {{ form_start(formAdd) }}
        <div class="row px-3 mt-2">
            <div class="mt-3 mb-2">
                <h3 class="text-sm-start text-lg-center">Ajout d'une voiture</h3>
            </div>
        </div>
        <div class="row px-3">
            <div class="mb-2">
                <h4 class="fw-bold">Caractéristiques</h4>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-3">
                {% if formAdd.imageFile.vars.value.file is null %}
                    {{ form_label(formAdd.imageFile, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {% endif %}
                {{ form_widget(formAdd.imageFile, {'attr' : { 'class' : '', 'onchange' : "loadFile(event)"}}) }}
                <img id="output" class="img-fluid mb-2 rounded-1 shadow">
                <script>
                    var loadFile = function(event) {
                        var reader = new FileReader();
                        reader.onload = function(){
                            var output = document.getElementById('output');
                            output.src = reader.result;
                        };
                        reader.readAsDataURL(event.target.files[0]);
                    };
                </script>
            </div>
            <div class="col-12 col-lg-6">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-2">
                        {{ form_label(formAdd.registrationNumber, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                        {{ form_widget(formAdd.registrationNumber, { 'attr' : { 'class' : 'rounded'}}) }}
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-2">
                        {{ form_label(formAdd.model, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                        {{ form_widget(formAdd.model, { 'attr' : { 'style' : 'border-radius: 25px !important;'}}) }}
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-2">
                        {{ form_label(formAdd.yearManufacture, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                        {{ form_widget(formAdd.yearManufacture, { 'attr' : { 'class' : 'rounded'}}) }}
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-2">
                        {{ form_label(formAdd.mileAge, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                        {{ form_widget(formAdd.mileAge, { 'attr' : { 'class' : 'rounded'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row px-3">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                {{ form_label(formAdd.horsePower, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.horsePower, { 'attr' : { 'class' : 'rounded'}}) }}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                {{ form_label(formAdd.fuelType, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.fuelType, { 'attr' : { 'style' : 'border-radius: 25px !important;'}}) }}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                {{ form_label(formAdd.gearBoxType, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.gearBoxType, { 'attr' : { 'style' : 'border-radius: 25px !important;'}}) }}
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 mb-2">
                {{ form_label(formAdd.doorNumber, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.doorNumber, { 'attr' : { 'class' : 'rounded'}}) }}
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 mb-2">
                {{ form_label(formAdd.seatNumber, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.seatNumber, { 'attr' : { 'class' : 'rounded'}}) }}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                {{ form_label(formAdd.vehicleCondition, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.vehicleCondition, { 'attr' : { 'style' : 'border-radius: 25px !important;'}}) }}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                {{ form_label(formAdd.color, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.color, { 'attr' : { 'class' : 'rounded'}}) }}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 mb-2">
                {{ form_label(formAdd.price, '', { 'label_attr' : { 'class' : 'mt-1 me-2'}}) }}
                {{ form_widget(formAdd.price, { 'attr' : { 'class' : 'rounded'}}) }}
            </div>
        </div>
        <div class="text-end pe-3 mb-4 mt-3">
            <button class="btn btn-success px-4" type="submit" style="border-radius: 5px;">Ajouter la voiture</button>
        </div>

        {{ form_end(formAdd) }}
    </div>

{% endblock %}



